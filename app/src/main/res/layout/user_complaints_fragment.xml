<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_background"
    tools:context="com.example.mohamed.railwaymangementsystem.Fragments.UserComplaintsFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Spinner
    android:id="@+id/train_id_spinner"
    style="?android:attr/spinnerItemStyle"
    android:singleLine="true"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:ellipsize="marquee"
    android:textSize="20sp"
    android:textColor="#808080"
        android:gravity="center"
    android:layout_marginHorizontal="60dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/login_et"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_station"
        tools:text="طنطا"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="الي"
            android:textSize="30sp"
            android:textColor="@color/dark_blue"
            android:layout_marginLeft="20dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_station"
        tools:text="منوف"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"

        />
    </LinearLayout>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:hint="ticket number"
      android:id="@+id/ticket_number_et"
      android:background="@drawable/login_et"
      android:layout_marginHorizontal="60dp"
      android:layout_marginTop="20dp"
      android:paddingLeft="20dp"
      android:textSize="20sp"
      android:inputType="number"/>

    <EditText
        android:id="@+id/complaint_message_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        android:background="@drawable/multi_line_et"
        android:layout_marginTop="20dp"
        android:hint="complaint"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="0dp"/>
       <Button
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:text="send"
           android:id="@+id/complaint_send_btn"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="30dp"
           android:background="@drawable/login_et"

           />
</LinearLayout>
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/user_complaint_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>


</FrameLayout>
