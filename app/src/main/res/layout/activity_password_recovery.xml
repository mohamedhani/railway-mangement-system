<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.mohamed.railwaymangementsystem.LoginPackage.PasswordRecoveryActivity"
    >
    <ProgressBar
        android:layout_gravity="center"
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/password_recovery_progress"
        style="?android:attr/progressBarStyleLarge"
        android:background="@color/gradStop"
        android:visibility="gone"

        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginHorizontal="30px"
        android:hint="Email"
        android:layout_marginTop="100px"
        android:paddingLeft="20px"
        android:id="@+id/password_recovry_et"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recover password"
        android:textSize="13dp"
        android:padding="25px"
        android:id="@+id/recover_password_btn"
        android:layout_gravity="center_horizontal"
        android:background="@color/gradStop"
        android:textColor="@color/white"
        android:layout_marginTop="80px"/>

    </LinearLayout>
</FrameLayout>
