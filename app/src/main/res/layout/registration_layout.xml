<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_main"
    xmlns:tools="http://schemas.android.com/tools"

    >
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/regsitation_progress"
            style="?android:attr/progressBarStyleLarge"
            android:background="@color/gradStop"
            android:visibility="gone"
            />
    <LinearLayout
        
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="join our community"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/register_tv_join_us"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginBottom="60dp"/>

        <EditText
            android:id="@+id/email_registration"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20px"
            android:drawingCacheQuality="high"
            android:hint="Email Address"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="25dp"
            android:background="@drawable/login_et"
            android:drawableRight="@drawable/email_image"
            android:paddingRight="20dp"

            
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="25dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_et"

            android:layout_marginTop="20px"
            android:id="@+id/phone_registration"
            android:drawableRight="@drawable/phone_image"
            android:paddingRight="20dp"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="25dp"
            android:background="@drawable/login_et"

            android:layout_marginTop="20px"
            android:id="@+id/password_registration"
            android:layout_marginBottom="60dp"
            android:drawableRight="@drawable/password_drawable"
            android:paddingRight="20dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="15sp"
            
            android:textColor="@color/dark_gray"
            android:layout_marginHorizontal="120dp"
            android:background="@drawable/login_btn"
            android:id="@+id/registration_btn"
            />
        </LinearLayout>
    </FrameLayout>

