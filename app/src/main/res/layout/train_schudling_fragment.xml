<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@android:color/transparent"

    tools:context="com.example.mohamed.railwaymangementsystem.Fragments.TrainSchudlingFragment">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Your Journey \nStart From Here ..."
          android:textColor="@color/dark_blue"
          android:textStyle="bold|italic"
          android:textSize="30sp"
         android:paddingLeft="24dp"
          android:layout_marginTop="20dp"
          />
        <AutoCompleteTextView
            android:layout_marginTop="90dp"
            android:background="@drawable/login_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:layout_marginHorizontal="60dp"
            android:hint="From"
            android:cursorVisible="true"
            android:paddingRight="20dp"

            android:id="@+id/from_train_scheduling_ed"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            />
        <AutoCompleteTextView
            android:background="@drawable/login_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginHorizontal="60dp"
            android:hint="to"
            android:textColor="@android:color/black"
            android:id="@+id/to_train_scheduling_ed"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@null"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:prompt="@string/train_types_prompt"
            android:entries="@array/train_types"
            android:background="@drawable/login_et"
            android:layout_marginHorizontal="60dp"
            android:id="@+id/train_type_Scheduling_spinner">
        </Spinner>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Search"
            android:textSize="16dp"
            android:background="@drawable/login_et"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="130dp"
            android:id="@+id/search_train_scheduling_btn"/>
  <Button
      android:layout_width="80dp"
      android:layout_height="40dp"
      android:text="Log out"
      android:textColor="@android:color/black"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="30dp"
      android:id="@+id/log_out_btn"
      android:background="@drawable/login_et"/>

</LinearLayout>
